<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="20dp"
    android:layout_marginTop="20dp"
    android:layout_marginEnd="20dp"
    android:layout_marginBottom="20dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="20dp"
    app:cardElevation="20dp"
    app:cardMaxElevation="24dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/dangerTypeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="50dp"
        android:textSize="20sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/numOfRepTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="50dp"
        android:textSize="20sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/locationTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="50dp"
        android:textSize="20sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/timestampTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="120dp"
        android:layout_marginBottom="50dp"
        android:textSize="20sp"
        android:textStyle="bold" />
    <!--                <TextView-->
    <!--                    android:layout_width="wrap_content"-->
    <!--                    android:layout_height="wrap_content"-->
    <!--                    android:layout_gravity="center_horizontal"-->
    <!--                    android:layout_marginTop="120dp"-->
    <!--                    android:layout_marginBottom="50dp"-->
    <!--                    android:text="comment"-->
    <!--                    android:textSize="20sp"-->
    <!--                    android:textStyle="bold" />-->

    <!--                <ImageView-->
    <!--                    android:layout_width="200dp"-->
    <!--                    android:layout_height="200dp"-->
    <!--                    android:layout_gravity="center"-->
    <!--                    android:src="@drawable/baseline_add_a_photo"-->
    <!--                    android:layout_margin="10dp"-->
    <!--                    android:id="@+id/img"-->
    <!--                    android:contentDescription="@string/app_name" />-->
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:onClick="ignoreCase"
        android:text="@string/ignore_button_text_gr" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:onClick="acceptCase"
        android:text="@string/notify_button_text_gr" />

</androidx.cardview.widget.CardView>